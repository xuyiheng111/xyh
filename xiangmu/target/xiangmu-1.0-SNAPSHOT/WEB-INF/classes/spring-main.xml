         &lt;!&ndash;配置切面
              advice-ref="myTx" 引入事物功能组件
                pointcut-ref="txPointcut"配置切点
         &ndash;&gt;
         <aop:advisor advice-ref="myTx" pointcut-ref="txPointcut"/>

    </aop:config>-->

    <!--事务注解驱动-->
    <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true"/>


</beans>